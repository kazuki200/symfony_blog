{% extends 'base.html.twig' %} {% block title %}
  Hello IndexController!
{% endblock %}

{% block body %}
  <section class="">
    <ul class="grid lg:grid-cols-2 lg:gap-6 gap-3">
      {% for post in posts %}
        {% include 'components/_blog_card.html.twig' with {
          title: post.title,
          category: post.category,
          tags: post.tags,
          summary: post.summary,
          url: path(
            'blog_detail',
            {
              id: post.id
            }
          ),
          thumbnail: post.getThumbnailUrl
        } %}
      {% endfor %}
    </ul>
  </section>
{% endblock %}
